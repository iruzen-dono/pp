{
  "name": "novashop/pro",
  "description": "NovaShop Pro - Modern E-commerce Platform",
  "type": "project",
  "license": "proprietary",
  "authors": [
    {
      "name": "NovaShop Team",
      "email": "team@novashop.local"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5 || ^10.0",
    "phpstan/phpstan": "^1.9",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "App\\": "App/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "lint": "phpstan analyse App",
    "cs-check": "phpcs --standard=PSR12 App",
    "cs-fix": "phpcbf --standard=PSR12 App"
  }
}

# ==========================================
# NovaShop Pro - Configuration
# ==========================================

# Configuration de la base de données
DB_HOST=localhost
DB_NAME=novashop
DB_USER=root
DB_PASS=

# Serveur
APP_NAME=NovaShop Pro
APP_ENV=development
APP_DEBUG=true

# URL de l'application (modifier selon votre déploiement)
APP_URL=http://localhost:8000

# Chemin du projet
APP_PATH=/NovaShop Pro/Public

# Sessions
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# Email (optionnel pour notifications)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USER=
MAIL_PASS=

# Sécurité
JWT_SECRET=your-secret-key-here
HASH_ALGO=bcrypt

{
    "name": "novashop/pro",
    "description": "E-commerce platform built with PHP",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.13",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "App/"
        },
        "files": [
            "App/Config/env.php"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "lint": "php -l App/ Public/",
        "cs-check": "phpcs App/ Public/ --standard=PSR12",
        "cs-fix": "phpcbf App/ Public/ --standard=PSR12"
    }
}
